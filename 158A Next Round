# include <bits/stdc++.h>
using namespace std;
 
int main()  {
    long long n, k, ans = 0;
    cin >> n >> k;
    int arr[n];
    for(long long i=0; i<n; i++)
    cin >> arr[i];
 
    int cmp = arr[k - 1];
    for(long long i=0; i<n; i++)  {
        if(arr[i] <= 0 || arr[i] < cmp) {
            cout << ans;
            return 0;
        }
        else;
        ans++;
    }
    cout << ans;
    return 0;
}
